<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tutorappfx.LoginController">
    <children>
        <Label text="LOGIN" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <TextField fx:id="emailField" promptText="Email" maxWidth="300" alignment="CENTER"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300" alignment="CENTER"/>
        <Button text="Login" onAction="#handleLogin"/>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label text="Not yet registered?" />
                <Hyperlink text="Sign Up"/>
            </children>
        </HBox>
    </children>
</VBox>
